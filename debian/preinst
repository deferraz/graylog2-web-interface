#!/bin/sh
# preinst script for ##PACKAGE##
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    install|upgrade)

  id graylog2 > /dev/null 2>&1 || adduser --home "/var/www/graylog2-web" --system graylog2 --group

  if [ -d "/var/www/graylog2-web" ]; then
    if [ -d "/var/www/graylog2-web.bkp" ]; then
      rm -rf /var/www/graylog2-web.bkp
    fi

    cp -af /var/www/graylog2-web /var/www/graylog2-web.bkp
    chown -R graylog2. /var/www/graylog2-web*
  else
    mkdir -p /var/www/graylog2-web
    chown -R graylog2. /var/www/graylog2-web
  fi
  mkdir -p /var/www/graylog2-web/tmp/pids
  chown graylog2:graylog2 /var/log/graylog2-web

    ;;

    abort-upgrade)
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
